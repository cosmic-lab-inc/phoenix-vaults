    "scripts": {
        "prettify": "prettier --check './ts/sdk/src/**/*.ts' './tests/**.ts'",
        "prettify:fix": "prettier --write './ts/sdk/src/**/*.ts' './tests/**.ts'",
        "lint": "eslint . --ext ts --quiet",
        "lint:fix": "eslint . --ext ts --fix",
        "prepare": "husky install",
        "clean": "chmod +x ./clean.sh && ./clean.sh",
        "idl": "cp target/types/phoenix_vaults.ts ts/sdk/src/types/phoenix_vaults.ts && prettier --write ts/sdk/src/types/phoenix_vaults.ts",
        "build": "chmod +x ./build.sh && ./build.sh",
        "anchor-tests": "yarn run ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.ts",
        "test": "chmod +x ./test.sh && ./test.sh"
    },
    "devDependencies": {
        "@coral-xyz/anchor": "0.28.0",
        "@solana/web3.js": "1.73.2",
        "@solana/spl-token": "0.4.8",
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "rpc-websockets": "7.5.1",
        "chai": "^4.3.4",
        "concurrently": "^8.2.2",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^8.0.0",
        "mocha": "10.1.0",
        "prettier": "^2.6.2",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5"
    },
    "engines": {
        "node": ">=16"
    }
